---
import Button from '../Buttons/Button.astro';

export interface Props {
	image: string;
	title: string;
	excerpt: string;
	link: string;
	style?: object;
}
const {
	image = '/placeholder-about.jpg',
	title,
	excerpt = 'The Choctaw Nation of Oklahoma is a federally recognized Native American tribe with a rich history and culture. The Choctaw people are originally from the southeastern United States, including parts of Mississippi, Alabama, Louisiana, and Florida. In the early 19th century, the Choctaw Nation was forcibly relocated to Indian Territory, which is now Oklahoma, as part of the Indian Removal Act of 1830.',
	link = '#',
	style,
} = Astro.props;
---

<article class="featured-article" style={style}>
	<div class="row">
		<div class="col-8">
			<figure class="featured-article__image"><img src={image} /></figure>
		</div>
		<div class="featured-article__content col-4">
			<h2 class="featured-article__title">{title}</h2>
			<p class="featured-article__excerpt">{excerpt}</p>
			<Button
				link={link}
				style={{
					marginTop: 'auto',
					textDecoration: 'none',
					textAlign: 'center',
				}}
				text="View Article"
			/>
		</div>
	</div>
</article>
<style lang="scss">
	.featured-article {
		&__image {
			max-width: 100%;
			img {
				width: 100%;
				height: 100%;
			}
		}
		&__content {
			display: flex;
			flex-direction: column;
			align-items: stretch;
		}
		&__excerpt {
			margin-bottom: 3rem;
		}
	}
</style>
