---
export interface Props {
	image: string;
	title: string;
	excerpt: string;
	author?: string;
}
const {
	image = '/placeholder-hero.jpg',
	title,
	excerpt = 'The Choctaw Nation of Oklahoma is a federally recognized Native American tribe with a rich history and culture. The Choctaw people are originally from the southeastern United States, including parts of Mississippi, Alabama, Louisiana, and Florida. In the early 19th century, the Choctaw Nation was forcibly relocated to Indian Territory, which is now Oklahoma, as part of the Indian Removal Act of 1830.',
	author = 'Shane Porter',
} = Astro.props;
---

<article class="horizontal-article">
	<figure class="horizontal-article__image"><img src={image} /></figure>
	<div class="horizontal-article__content">
		<h2 class="horizontal-article__title">{title}</h2>
		<p class="horizontal-article__excerpt">{excerpt}</p>
	</div>
</article>
<style lang="scss">
	.horizontal-article {
		display: grid;
		grid-template-columns: 1fr 2fr;
		gap: 2rem;
		&__image {
			max-width: 100%;
			grid-column: 1 / 2;
			img {
				width: 100%;
				height: 100%;
				object-fit: cover;
			}
		}
		&__content {
			grid-column: 2 / 3;
		}
		&__excerpt {
			margin-bottom: 3rem;
		}
	}
</style>
