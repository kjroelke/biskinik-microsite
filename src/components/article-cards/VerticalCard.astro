---
export interface Props {
	image: string;
	title: string;
	excerpt: string;
}
const {
	image = '/placeholder-social.jpg',
	title,
	excerpt = 'The Choctaw Nation of Oklahoma is a federally recognized Native American tribe with a rich history and culture. The Choctaw people are originally from the southeastern United States, including parts of Mississippi, Alabama, Louisiana, and Florida. In the early 19th century, the Choctaw Nation was forcibly relocated to Indian Territory, which is now Oklahoma, as part of the Indian Removal Act of 1830.',
} = Astro.props;
---

<article class="vertical-article">
	<figure class="vertical-article__image"><img src={image} /></figure>
	<h2 class="vertical-article__title">{title}</h2>
	<p class="vertical-article__excerpt">{excerpt}</p>
</article>
<style lang="scss">
	.vertical-article {
		display: flex;
		flex-direction: column;
		align-items: stretch;
		&__image {
			max-width: 100%;
			img {
				width: 100%;
				height: 100%;
			}
		}
		&__excerpt {
			margin-bottom: 3rem;
		}
	}
</style>
